					name="use_videojs"
					type="checkbox"
					label="MOD_HEC_FACEBOOK_FEED_FIELD_USE_VIDEOJS_LABEL"
					description="MOD_HEC_FACEBOOK_FEED_FIELD_USE_VIDEOJS_DESC"
