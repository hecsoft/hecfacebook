				<field
					name="client_id"
					type="text"
					label="MOD_HEC_FACEBOOK_FEED_FIELD_CLIENT_ID_LABEL"
					description="MOD_HEC_FACEBOOK_FEED_FIELD_CLIENT_ID_DESC"
					default="1407222099294113"
