				<field
					name="client_secret"
					type="text"
					label="MOD_HEC_FACEBOOK_FEED_FIELD_CLIENT_SECRET_LABEL"
					description="MOD_HEC_FACEBOOK_FEED_FIELD_CLIENT_SECRET_DESC"
					default="0dfb6eae7bccac5a4e5aa395e0e91707"
				/>

				<field
					name="pagename"
					type="text"
					label="MOD_HEC_FACEBOOK_FEED_FIELD_PAGENAME_LABEL"
					description="MOD_HEC_FACEBOOK_FEED_FIELD_PAGENAME_DESC"
				/>

				<field
					name="feed_count"
